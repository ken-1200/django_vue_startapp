option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: app.settings.prod
    PYTHONPATH: /var/app/current:$PYTHONPATH
  aws:elasticbeanstalk:container:python:
    WSGIPath: app.wsgi:application
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /api
    MatcherHTTPCode: 200-499

container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --settings app.settings.prod"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --settings app.settings.prod"
    leader_only: true